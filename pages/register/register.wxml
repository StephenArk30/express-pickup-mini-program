<!--register.wxml-->
<view class="container">
  <view>
    <form bindsubmit="formSubmit">
      <view class='inputs'>
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
            学校：{{array[index]}}
          </view>
          <view class='hr'/>
        </picker>
      </view>
      <view class='inputs'>
        <input name='username' placeholder='用户名'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input name='card_id' type='number' placeholder='学号'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input password name='password' placeholder='密码'/>
        <view class='hr'/>
      </view>
      <view class='inputs'>
        <input password name='password_confirm' placeholder='确认密码'/>
        <view class='hr'/>
      </view>
      <view>
        <button form-type='submit'>注册</button>
      </view>
    </form>
  </view>

  <view class='motto'>代拿平台-注册</view>
</view>