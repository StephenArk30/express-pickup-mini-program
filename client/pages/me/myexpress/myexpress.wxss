.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #808080;
  font-size: 25px;
}

.hr {
  height: 2px;
  width: 100%;
  background: grey;
  opacity: 0.2;
  margin-top: 5px;
  margin-bottom: 5px;
}